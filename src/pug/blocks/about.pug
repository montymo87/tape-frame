		{
			descr: 'выпускники 9 и 11 классов',
			icon: 'school',
		},
		{
			descr: 'выпускники детского сада и начальной школы',
			icon: 'school-2',
		},
		{
			descr: 'ленты первоклассников',
			icon: 'bell',
		},
		{
			descr: 'индивидуальные ленты',
			icon: 'crown',
